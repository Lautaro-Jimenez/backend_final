<div class="container my-3 py-3">
    <div class="container-sm bg-body-secondary p-3" style="border-radius: 20px;">
        <h2 class="m-3">Add a New Product</h2>
        <form class="m-3" id="addProduct">
            <div class="mb-3">
                <label for="title" class="form-label">Title *</label>
                <input type="text" class="form-control" name="title" aria-describedby="title" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description *</label>
                <input type="text" class="form-control" name="description" aria-describedby="description" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price *</label>
                <input type="number" class="form-control" name="price" aria-describedby="price" required>
            </div>
            <div class="mb-3">
                <label for="stock" class="form-label">Stock *</label>
                <input type="number" class="form-control" name="stock" aria-describedby="stock" required>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Category *</label>
                <input type="category" class="form-control" name="category" required>
            </div>
            <div class="mb-3">
                <label for="thumbnail" class="form-label">Thumbnail</label>
                <input type="file" class="form-control" name="thumbnail" accept=".png,.jpg,.jpeg,image/png,image/jpg,image/jpeg">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>


